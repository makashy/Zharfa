#:kivy 1.11.1
#: set BACKGROUND_COLOR (40/255.0, 44/255.0, 52/255.0, 1)
#: set ACTIVITY_BAR_COLOR (51/255.0, 56/255.0, 66/255.0, 1)
#: set TEXT_INPUT_BACKGROUND_COLOR (27/255.0, 29/255.0, 35/255.0, 1)
#: set TEXT_INPUT_FOREGROUND_COLOR (204/255.0, 204/255.0, 204/255.0, 1)
#: set INPUT_BACKGROUND_COLOR (33/255.0, 37/255.0, 43/255.0, 1)
#: set ACTIVITY_BAR_WIDTH 50
#:import gui utils.gui

<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: BACKGROUND_COLOR
    size_hint: 1, 1
    # height: 40
    text_size: self.size
    halign: 'left'
    valign: 'center'
    text: 'CHANGE THIS'
    padding:5,5


<DataCard@RelativeLayout>:
    size_hint: 1, 0.2 
    Image:
        size_hint: 0.5, 1 
        pos: 0, 0
        color: (1,1,1,1)
        source: './images/facelogo09-01.png'
    BoxLayout:
        orientation: 'vertical'
        size_hint: 0.5, 1 
        pos: self.parent.width/2, 0
        padding: 10
        Label:
            size_hint: 0.5, 0.3
            color:(1,1, 1, 1)
            text: 'ID 1452456325'
        Label:
            size_hint: 0.5, 0.3
            color:(1,1, 1, 1)
            text: 'Name A'
        Label:
            size_hint: 0.5, 0.3
            color:(1,1, 1, 1)
            text: "First time seen 1398.2.2@12-12"
    

<RV>:
    viewclass: 'Label'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<CameraClick>:
    # orientation: 'vertical'

    FloatLayout:
        size_hint: None, None
        size: max(root.size[0], 800),  max(root.size[1], 600)
        canvas:
            Color:
                rgba: BACKGROUND_COLOR
            Rectangle:
                size: self.size
        #ACTIVITY_BAR
        RelativeLayout:
            id: ACTIVITY_BAR
            size_hint: None, 1
            width : ACTIVITY_BAR_WIDTH
            canvas:
                Color:
                    rgba: ACTIVITY_BAR_COLOR
                Rectangle:
                    size: self.size

        #Camera section
        StackLayout:
            id: camera_section
            size_hint: None, 1
            width: (self.parent.size[0] - ACTIVITY_BAR_WIDTH)/2
            pos: ACTIVITY_BAR_WIDTH, root.height-self.height
            orientation: 'tb-rl'

            # canvas:
            #     Color:
            #         rgba: (0.5, 0.5, 0.2, 1)
            #     Rectangle:
            #         size: self.size
            #         pos: self.pos

            #camera
            RelativeLayout:
                size_hint: 1, 0.5
                # pos: 0, self.parent.size[1]/2
                canvas:
                    Color:
                        rgba: INPUT_BACKGROUND_COLOR
                    Rectangle:
                        size: self.size
                
                Image:
                    id: camera
                    color: (1,1,1,1)
                    source: './images/facelogo09-01.png'
            #keys  
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: 40
                # pos: 0, 0
                padding: 5
                spacing: 5
                Spinner:
                    id: source_mode
                    pos_hint: {'center': (.5, .5)}
                    text: 'Demo1'
                    values: 'Camera', 'IP Camera', 'Video', 'Demo1', 'Demo2'
                    on_text: gui.check_source(self.text, app.cm)
                ToggleButton:
                    id: play
                    # size_hint: None, None
                    # size: 50, 50
                    # center_x: self.parent.width/2
                    # top: self.parent.center_y - 5
                    text: 'Play'
                    on_press: app.input_process.play_mode.put_nowait(self.state)
                ToggleButton:
                    id: record
                    text: 'Record'
                    on_press: pass
                    disabled: True
                Button:
                    # size_hint: None, None
                    # size: 100, 50
                    # pos: 0, 0
                    text: 'Capture'
                    on_press: root.capture()
            # ip camera
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: 40
                padding: 5
                spacing: 5
                TextInput:
                    id: source_address
                    text: 'rtsp://192.168.1.14:8080/h264_pcm.sdp'
                    background_color: TEXT_INPUT_BACKGROUND_COLOR
                    foreground_color: TEXT_INPUT_FOREGROUND_COLOR
                    font_size: 14
                    multiline: False
                    disabled: True
                Spinner:
                    id: camera_number
                    size_hint: None, 1
                    width: self.parent.width/9
                    text: 'No.1'
                    values: 'No.1', 'No.2', 'No.3'
                    on_text: print(self.text)
                    disabled: True
                Button:
                    size_hint: None, 1
                    width: self.parent.width/6
                    text: 'Change'
                    on_press: app.input_process.source_info.put_nowait([source_address.text, source_mode.text, camera_number.text, width.text, height.text])

            # image size
            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, None
                height: 40
                padding: 5
                spacing: 5
                BackgroundLabel:
                    text: 'Width'
                    halign: 'center'
                TextInput:
                    id: width
                    text: '1920'
                    halign: 'center'
                    input_filter: 'int'
                    background_color: TEXT_INPUT_BACKGROUND_COLOR
                    foreground_color: TEXT_INPUT_FOREGROUND_COLOR
                    font_size: 15
                    multiline: False
                BackgroundLabel:
                    text: 'Height'
                    halign: 'center'
                TextInput:
                    id: height
                    text: '1080'
                    halign: 'center'
                    input_filter: 'int'
                    background_color: TEXT_INPUT_BACKGROUND_COLOR
                    foreground_color: TEXT_INPUT_FOREGROUND_COLOR
                    font_size: 15
                    multiline: False

            # view options
            GridLayout:
                size_hint: 1, None
                height: 120
                cols: 2
                rows: 3
                BackgroundLabel:
                    text: 'Show face boxes'
                Switch:
                    id: face_box
                BackgroundLabel:
                    text: 'Show names'
                Switch:
                    id: names
                BackgroundLabel:
                    text: 'Show IDs'
                Switch:
                    id: ids

            # Status viewer
            GridLayout:
                size_hint: 1, None
                height: 60
                cols: 2
                rows: 3
                BackgroundLabel:
                    text: 'FPS'
                BackgroundLabel:
                    id: FPS
                    text: str(app.counter)

                BackgroundLabel:
                    text: 'FPS'
                BackgroundLabel:
                    text: str(app.counter)

                BackgroundLabel:
                    text: 'FPS'
                BackgroundLabel:
                    text: str(app.counter)

                
        #data table
        BoxLayout:
            id: info_list
            orientation: 'vertical'
            size_hint: None, None
            width: (self.parent.width - ACTIVITY_BAR_WIDTH)/2
            height: self.parent.height
            pos: ACTIVITY_BAR_WIDTH + (self.parent.width - ACTIVITY_BAR_WIDTH) / 2, root.height-self.height
            padding: 10

            # RV:
            DataCard:
            DataCard:
            DataCard:
            DataCard:



